.block2_1{
  position:relative;
  width:90%;
  min-height:21vh;
  height:90%;
  box-shadow:0.4px 3px 5px rgba(0,0,0,0.2);
  background:#fff;
  border-radius:10px;
  z-index:1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.block2_1:before{  
    content:"";
    position:absolute;
    z-index:3;
    left:0;
    top:-6%;
    width:96%;
    height:auto;
    background:#fff;
    border-radius:10px;
    box-shadow:0.4px 3px 5px rgba(0,0,0,0.2);

}  
.block2_1:after {  
    content:"";
    position:absolute;
    z-index:-3;
    width:98%;
    height:106%;
    background:#fff;
    border-radius:10px;
    box-shadow:0.4px 3px 5px rgba(0,0,0,0.2);
    left:0;
    top:-3%;

} 
